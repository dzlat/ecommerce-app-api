generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}

enum Genre {
  THRILLER
  COMEDY
  HORROR
  ADVENTURE
  ACTION
  DRAMA
  FANTASY
  WESTERN
  SCI_FI
  ANIMATION
  ROMANCE
}

enum Role {
  ADMIN
  CUSTOMER
}

enum MovieFormat {
  VHS
  DVD
  BLU_RAY
  ULTRA_HD_BLU_RAY
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  total     Decimal
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  User  User        @relation(fields: [userId], references: [id])
  Items OrderItem[]

  @@index([userId, createdAt])
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int     @default(1)
  unitPrice Decimal

  Order   Order   @relation(fields: [orderId], references: [id])
  Product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
}

model Movie {
  id          String   @id @default(uuid())
  title       String   @unique
  description String
  genre       Genre
  rating      Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  featured    Boolean  @default(false)
  slug        String   @unique

  Products Product[]
  Reviews  Review[]
}

model Product {
  id            String      @id @default(uuid())
  movieId       String
  quantity      Int         @default(0)
  format        MovieFormat
  originalPrice Decimal
  price         Decimal

  Movie      Movie       @relation(fields: [movieId], references: [id], onDelete: Cascade)
  Favorites  Favorite[]
  OrderItems OrderItem[]

  @@unique([movieId, format])
}

model User {
  id            String         @id @default(uuid())
  name          String         @unique
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  role          Role           @default(CUSTOMER)
  RefreshTokens RefreshToken[]
  Reviews       Review[]
  Favorites     Favorite[]
  Orders        Order[]
}

model Review {
  id        String   @id @default(uuid())
  title     String
  content   String
  rating    Float
  shouldSee Boolean? @default(false)
  userId    String
  movieId   String

  Movie Movie @relation(fields: [movieId], references: [id])
  User  User  @relation(fields: [userId], references: [id])

  @@unique([userId, movieId])
  @@index([movieId])
  @@index([userId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())
  deviceId  String   @unique
  userAgent String?

  User User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([deviceId])
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  User    User    @relation(fields: [userId], references: [id])
  Product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
}
